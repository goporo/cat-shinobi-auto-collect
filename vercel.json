{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "cat-shinobi-collector",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/collect",
      "destination": "/api/collect"
    },
    {
      "source": "/api/player/:player_id",
      "destination": "/api/player/[player_id]"
    },
    {
      "source": "/api/logs",
      "destination": "/api/logs"
    }
  ],
  "crons": [
    {
      "path": "/api/collect",
      "schedule": "0 8 * * *"
    }
  ]
}
